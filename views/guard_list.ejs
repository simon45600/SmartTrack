                                                                <td><%= guard_list['Items'][i].ADDRESS_1 %></td>
                                                                <td><%= guard_list['Items'][i].SHIFT %></td>
                                                                <td><%= guard_list['Items'][i].PHONE_NUMBER %></td>
                                                                <td>
                                                                    <p data-placement="top" data-toggle="tooltip" title="Save" class=" edit_button" id="<%= guard_list['Items'][i].EMPLOYEE_ID %>"> 
                                                                        <button class="btn btn-primary btn-xs" data-title="Save" data-toggle="modal" data-target="#edit">
                                                                            <span class="glyphicon glyphicon-pencil"></span>
                                                                        </button>
                                                                    </p>
                                                                </td>
                                                                <td>
                                                                    <p data-placement="top" data-toggle="tooltip" title="Delete"  class=" delete_button" id="<%= guard_list['Items'][i].EMPLOYEE_ID %>">
                                                                        <button class="btn btn-danger btn-xs" data-title="Delete" data-toggle="modal" data-target="#delete" >
                                                                            <span class="glyphicon glyphicon-trash">
                                                                            </span>
