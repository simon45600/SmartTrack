                                        <div class="col-lg-4 col-lg-offset-4">
                                            <input type="search" id="search" value="" class="form-control" placeholder="Search">
                                        </div>
                                        <div class="col-lg-4">
                                            <button type="button" class="btn btn-primary pull-right" data-toggle="modal" data-target="#modal_add_guard">
                                                Add Guard
                                            </button>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-lg-12">
                                            <% if(guard_list['Count']==0){ %>
                                                <div class="col-lg-12 col-xs-12">
                                                    <p class="margin-top-15"><label> No gaurds for this property </label></p>
                                                </div>
                                            <% }
                                            else { %>
                                            <table class="table" id="table">
                                                <thead>
                                                    <tr>                                                        
                                                        <th>Guard Name</th>
                                                        <th>Address</th>
                                                        <th>Shift</th>
                                                        <th>Phone Number</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    <% for(var i = 0;i< guard_list['Count'];i++)
                                                        {
                                                        %>
